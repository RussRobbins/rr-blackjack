<html>
  <head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
  </head>
  <body>

    <div class="container">
      <div class="row-fluid">
        <% if session[:cash] <= 0 %>
          <div class="span12 alert alert-error">
            <h3>Total Cash: $<%= session[:cash] %></h3>
            <h4>Oh noes, you're out of cash! Come back later when you have more to lose.</h4>
          </div>
        <% else %>
          <div class="span12 alert alert-info">
            <h2 align='center'>Welcome to Blackjack, <%= session[:username] %>!</h2>
              <form action='/bet' method='post'>
              <h3 align='center'>Total Cash: $<%= session[:cash] %> &nbsp;&nbsp; Amount to bet:
              <input type='text' name='bet_amt' class='input-small'/>
              <input class='btn-info' style='margin-left: 10px;' type='submit' value='Place bet' action='post'/>
              </form>
            </h3>
          </div>
        <% end %>
      </div>

      <div class="row-fluid">
        <div id='dealer_area' class="span12 alert alert-success">
          <h4>Dealer's cards</h4>
          <div class='cards_area'>
            <%= draw_cover() %>
            <%= draw_cover() %>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div id='player_area' class="span12 alert alert-success">
          <h4><%= session[:username] %>'s cards</h4>
          <div class='cards_area'>
            <%= draw_cover() %>
            <%= draw_cover() %>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>