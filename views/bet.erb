<html>
  <head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
  </head>
  <body>

    <div class="container">
      <div class="alert alert-error">
        <h2 align='center'>Welcome to Blackjack, <%= session[:username] %>!</h2>
      </div>
      <div class="row-fluid">
        <% if session[:cash] <= 0 %>
          <div class="span3 alert alert-error">
            <h4>Cash balance: $<%= session[:cash] %></h4>
            Oh noes, you're out of cash! Come back later when you have more to lose.
          </div>
        <% else %>
          <div class="span3 alert alert-info">
            <h4>Cash balance: $<%= session[:cash] %></h4>
            <br>
            <form action='/bet' method='post'>
              How much do you bet?
              <input type='text' name='bet_amt' class='input-small'/>&nbsp;&nbsp;&nbsp;
              <input type='submit' value='Place bet' action='post'/>
            </form>
          </div>
        <% end %>
        <div id='dealer_area' class="span9 alert alert-success">
          <h4>Dealer's cards</h4>
          <div class='cards_area'>
            <%= draw_cover() %>
            <%= draw_cover() %>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div id='player_area' class="span9 offset3 alert alert-success">
          <h4><%= session[:username] %>'s cards</h4>
          <div class='cards_area'>
            <%= draw_cover() %>
            <%= draw_cover() %>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>